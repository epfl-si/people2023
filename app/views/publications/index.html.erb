<%= turbo_frame_tag :publications_index do %>
  <%= turbo_frame_tag "publications", src: nil, target: nil, data: {controller: "sortable"} do %>
    <% @publications.each do |publication| %>
      <%= render 'editable_publication', publication: publication %>
    <% end %>
  <% end %>
  <div class="list-group-item" %>
    <%= turbo_frame_tag "new_publication_form" do %>
  	  <div class="row justify-content-center">
  		  <%= link_to icon_text('add', 'plus-circle'), new_profile_publication_path(@profile), class: "btn btn-secondary btn-sm", data: {turbo_stream: true} %>
  	  </div>
    <% end %>
  </div>
<% end %>









